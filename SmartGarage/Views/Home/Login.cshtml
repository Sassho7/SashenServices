@model SmartGarage.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

@using (Html.BeginForm("LoginUser", "Auth", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
}

<div class="mt-3">
    <a href="@Url.Action("Register", "Auth")" class="btn btn-secondary">Register</a>
    <a href="@Url.Action("ForgotPassword", "Auth")" class="btn btn-link">Forgot Password</a>
</div>
